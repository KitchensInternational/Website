<ul class="pagination">
    <li {{action 'goToPrevious'}} class="page-item go-to-previous {{unless canGoBack 'disabled'}}"><a class="page-link" aria-label="Previous"><span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span></a></li>
    {{#each pages as |page|}}
    <li {{action 'goToPage' page}} class="page-item go-to-page {{if (eq currentPage page) 'active'}}"><a class="page-link">{{page}}</a></li>
    {{/each}}
    <li {{action 'goToNext'}} class="page-item go-to-next {{unless canGoForward 'disabled'}}"><a class="page-link" aria-label="Next"><span aria-hidden="true">&raquo;</span><span class="sr-only">Next</span></a></li>
</ul>
