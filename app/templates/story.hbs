<div class="introduction" style={{background-image model.featuredImageProxy}}>
    <div class="heading">
        {{#heading-after-scroll class="mb-0"}}{{model.title}}{{/heading-after-scroll}}
        <hr>
    </div>
</div>
<div class="background-taupe mb-5">
    <div class="container">
        <div class="row">
            <article class="col py-5">
                <p>{{#link-to 'stories' class="btn btn-outline-primary btn-sm"}}view all stories{{/link-to}}</p>
                <h3>{{model.title}}</h3>
                <p>{{moment-format model.publicationDate 'MMMM DD, YYYY'}}</p>
                {{markdown-to-html model.content}}
                {{share-button class="pull-right mb-4"}}
                {{#disqus-comments identifier=model.slug title=model.title class="mt-5"}}{{/disqus-comments}}
            </article>
        </div>
    </div>
</div>
