<div class="introduction text-white">
    <h1>{{model.town}}</h1>
    {{#if model.name}}
        <h2>{{model.name}}</h2>
    {{/if}}
</div>
<div class="container-fluid pt-5 pb-4">
    <div class="row justify-content-center">
        <div class="col col-sm-10">
            {{markdown-to-html model.description class="text-center"}}
        </div>
    </div>
</div>
<div class="background-taupe mb-5">
    <div class="container-fluid">
        <div class="row">
            {{#each model.images as |image|}}
            <div class="col-4">
                <img src="{{image.file.url}}" class="img-fluid">
            </div>
            {{/each}}
        </div>
    </div>
</div>
